<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/descriptions_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:id="@+id/my_photo_card"
            android:layout_width="@dimen/icon_diameter"
            android:layout_height="@dimen/icon_diameter"
            android:layout_marginBottom="@dimen/margin"
            android:elevation="12dp"
            app:cardCornerRadius="86dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/my_photo_view"
                android:layout_height="@dimen/icon_diameter"
                android:layout_width="@dimen/icon_diameter"
                android:src="@drawable/my_photo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_name_text_size"
            android:layout_marginBottom="@dimen/margin"
            android:text="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:textAlignment="center"
            android:textSize="@dimen/hello_text_size"
            android:layout_marginBottom="@dimen/margin"
            android:text="@string/hello_message"/>
    </LinearLayout>
</FrameLayout>